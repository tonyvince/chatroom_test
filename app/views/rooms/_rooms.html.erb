
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400" id="rooms">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
            Chat Room name
          </th>
          <th scope="col" class="px-6 py-3">
            Created at
          </th>
          <th scope="col" class="px-6 py-3">
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @rooms.present? %>
          <% @rooms.each do |room| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= room.name %>
              </th>
              <td class="px-6 py-4">
                <%= room.created_at %>
              </td>
              <td class="px-6 py-4">
                <%= link_to 'Join', room_path(room), class: 'font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <td class="px-6 py-4 text-center" colspan="3">
            Rooms will show up here without page reload as you create them.
          </td>
        <% end %>
      </tbody>
    </table>
  </div>




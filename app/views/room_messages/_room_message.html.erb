<div class="flex items-start gap-2.5 py-3">
  <img class="w-8 h-8 rounded-full" src="<%= gravatar_url(room_message.user) %>" alt="dp">
  <div class="flex flex-col w-full max-w-[320px] leading-1.5 p-4 border-gray-200 bg-green-500 rounded-e-xl rounded-es-xl dark:bg-gray-700" data-controller="chat" data-chat-user-id-value="<%= room_message.user_id %>">
     <div class="flex items-center space-x-2 rtl:space-x-reverse">
        <span class="text-sm font-semibold text-gray-900 dark:text-white"><%= room_message.user.username %></span>
        <span class="text-sm font-normal text-black-500 dark:text-gray-400"><%= room_message.created_at %></span>
     </div>
     <p class="text-sm font-normal py-2.5 text-black-900 dark:text-white"><%= room_message.message %></p>
     <span class="text-sm font-normal text-black-500 dark:text-gray-400">Delivered</span>
  </div>
</div>





